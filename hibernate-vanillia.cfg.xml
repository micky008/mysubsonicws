<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

       <!-- Database connection settings for XAMPP-->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost/mysubsonic?useSSL=false&amp;useUnicode=true&amp;characterEncoding=utf-8</property> 
        <property name="connection.username">root</property>
        <property name="connection.password"></property>
        <property name="connection.CharSet">utf8</property>
        <property name="connection.characterEncoding">utf8</property>
        <property name="connection.useUnicode">true</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="c3p0.max_size">20</property>
        <property name="c3p0.min_size">1</property>
        <property name="c3p0.idle_test_period">5000</property>
        
        
        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MariaDBDialect</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">false</property>

        <!-- Drop and re-create the database schema on startup -->
        <!--<property name="hbm2ddl.auto">create</property>-->
        

        <!-- Names the annotated entity class -->
        <mapping class="com.msc.mysubsonicws.entity.Folder"/>
        <mapping class="com.msc.mysubsonicws.entity.LastScan"/>
        <mapping class="com.msc.mysubsonicws.entity.Musique"/>
        <mapping class="com.msc.mysubsonicws.entity.Player"/>
        <mapping class="com.msc.mysubsonicws.entity.PlayerMusiquePlace"/>
        <mapping class="com.msc.mysubsonicws.entity.User"/>

    </session-factory>

</hibernate-configuration>